<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>nd4j-jcublas-common</artifactId>
    <packaging>jar</packaging>


    <parent>
        <artifactId>nd4j-jcublas-parent</artifactId>
        <groupId>org.nd4j</groupId>
        <version>0.0.3.5.6-SNAPSHOT</version>
    </parent>

    <name>nd4j-jcublas</name>
    <url>http://nd4j.org/</url>

    <properties>
        <!-- Set needed version of JCuda here -->
        <jcuda.version>6.5</jcuda.version>
    </properties>


    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>2.3.2</version>
                    <configuration>
                        <source>1.7</source>
                        <target>1.7</target>
                        <compilerArgument />
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <dependencies>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
        </dependency>
        <dependency>
            <groupId>org.nd4j</groupId>
            <artifactId>jcublas</artifactId>
            <version>${jcuda.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.nd4j</groupId>
            <artifactId>jcuda</artifactId>
            <version>${jcuda.version}</version>
            <scope>compile</scope>

        </dependency>
        <dependency>
            <groupId>org.nd4j</groupId>
            <artifactId>jcufft</artifactId>
            <version>${jcuda.version}</version>
            <scope>compile</scope>

        </dependency>
        <dependency>
            <groupId>org.nd4j</groupId>
            <artifactId>jcurand</artifactId>
            <version>${jcuda.version}</version>
            <scope>compile</scope>

        </dependency>
        <dependency>
            <groupId>org.nd4j</groupId>
            <artifactId>jcusparse</artifactId>
            <version>${jcuda.version}</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>org.nd4j</groupId>
            <artifactId>nd4j-api</artifactId>
            <version>${project.version}</version>
        </dependency>

    </dependencies>


</project>
