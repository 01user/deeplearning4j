<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>nd4j</artifactId>
        <groupId>org.nd4j</groupId>
        <version>0.4-rc3.9-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>nd4j-native-parent</artifactId>
    <packaging>pom</packaging>

    <name>nd4j-native-parent</name>
    <modules>
        <module>nd4j-native</module>
        <module>nd4j-native-api</module>
        <module>nd4j-cuda-7.5</module>
    </modules>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.bytedeco</groupId>
                    <artifactId>javacpp</artifactId>
                    <version>${javacpp.version}</version>
                    <dependencies>
                        <dependency>
                            <groupId>org.nd4j</groupId>
                            <artifactId>nd4j-native-api</artifactId>
                            <version>${project.version}</version>
                        </dependency>
                    </dependencies>
                    <configuration>
                        <copyLibs>true</copyLibs>
                        <properties>${platform.properties}</properties>
                        <propertyKeysAndValues>
                            <property>
                                <name>platform.root</name>
                                <value>${platform.root}</value>
                            </property>
                            <property>
                                <name>platform.compiler</name>
                                <value>${platform.compiler}</value>
                            </property>
                        </propertyKeysAndValues>
                        <classPaths>
                            <classPath>${project.build.outputDirectory}</classPath>
                        </classPaths>
                        <includePath>${env.LIBND4J_HOME}/blas</includePath>
                        <linkPath>${env.LIBND4J_HOME}/blasbuild/blas</linkPath>
                    </configuration>
                    <executions>
                        <execution>
                            <id>generate-sources</id>
                            <phase>generate-sources</phase>
                            <goals>
                                <goal>build</goal>
                            </goals>
                            <configuration>
                                <skip>${generate-sources.skip}</skip>
                                <outputDirectory>${project.build.sourceDirectory}</outputDirectory>
                                <classOrPackageNames>
                                    <classOrPackageName>org.nd4j.nativeblas.Nd4jBlas</classOrPackageName>
                                    <classOrPackageName>org.nd4j.nativeblas.NativeOps</classOrPackageName>
                                </classOrPackageNames>
                            </configuration>
                        </execution>
                        <execution>
                            <id>process-classes</id>
                            <phase>process-classes</phase>
                            <goals>
                                <goal>build</goal>
                            </goals>
                            <configuration>
                                <outputDirectory>${project.basedir}/src/main/resources/lib/linux-x86_64</outputDirectory>
                                <skip>${process-classes.skip}</skip>
                                <classOrPackageNames>
                                    <classOrPackageName>org.nd4j.nativeblas.Nd4jBlas</classOrPackageName>
                                    <classOrPackageName>org.nd4j.nativeblas.NativeOps</classOrPackageName>
                                </classOrPackageNames>

                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>
